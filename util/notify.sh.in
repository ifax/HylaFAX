else
    DESTINATION="$number"
fi
if [ "$WHY" = "done" ] ; then
    putHeaders "$jobtag $DICTTO $DESTINATION $DICTCOMPLETED"
    echo "$DICTCOMPLETEDSUCCESSFULLY";
    echo "";
    if [ "$jobtype" = "facsimile" ] ; then
        printItem "%u" "$DICTPAGES" "$npages"
